#!/usr/bin/env bash
set -e
if [[ ! -d "/home/seventh/src/git.sr.ht/chess7th/rusty-commit-saver" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/seventh/src/git.sr.ht/chess7th/rusty-commit-saver")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/seventh/src/git.sr.ht/chess7th/rusty-commit-saver" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/seventh/src/git.sr.ht/chess7th/rusty-commit-saver/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/seventh/src/git.sr.ht/chess7th/rusty-commit-saver/.envrc" "/home/seventh/src/git.sr.ht/chess7th/rusty-commit-saver/.direnv"/*.rc
